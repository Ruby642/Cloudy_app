<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cloudy.LoginPage"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="LOGIN" FontSize="28" HorizontalOptions="Center" />
            <Label Text="Or if you don't have an account and want to make one click here"
                   FontSize="14" HorizontalOptions="Center" />
            <Button Text="SIGN UP" Clicked="OnGoToSignUpClicked" />

            <Label Text="Username" />
            <Entry x:Name="LoginUsernameEntry" Placeholder="Enter your Username" />

            <Label Text="Password" />
            <Entry x:Name="LoginPasswordEntry" Placeholder="Enter your Password" IsPassword="True" />

            <Button Text="Login" BackgroundColor="DodgerBlue" TextColor="White"
                    Clicked="OnLoginClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
